<!DOCTYPE html>
<html>
 <% include ../partials/head %>
 <body>

   <% include ../partials/nav %>

	<% if (product) { %>
   <div class="row" style="margin-top: 5%">
       <div class="col">
         <img style="height: 400px; width: 600px" src="<%= product.image %>" />
       </div>
       <div class="col">
         <h1><%= product.name %> </h1>
         <h2>$ <%= product.price %> </h2>

         <form method="POST" action="/api/cart/product/<%= product._id %>">
             <div class="btn-group" role="group" aria-label="...">
               <input type="hidden" name="quantity" id="quantity" value="1">
               <button type="button" id="minus" class="btn btn-default"><i class="fas fa-minus"></i></button>
               <button type="button" id="total" class="btn btn-default">1</button>
               <button type="button" id="plus" class="btn btn-default"><i class="fas fa-plus"></i></button>
             </div>

             <div class="form-group">
               <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
               <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">

               <input type="text" name="item" class="form-control" value="<%= product.name %>">
               <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>">
						 </div>
						 
						 <% } %>

             <% if (user)  { %>
               <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
             <% } else { %>
               <a href='/signup' class="btn btn-warning btn-lg">Signup to begin buying!</a>
             <% } %>
           </form>

       </div>
	 </div>
   <% include ../partials/scripts %>
	 
 </body>
</html>